				<page class='check'><input type="checkbox" name="-1" value="11"> Аниме</page>
				<page class='check'><input type="checkbox" name="-1" value="14"> Пепа</page>
				<page class='check'><input type="checkbox" name="-1" value="16"> Dota 2 предметы</page>
